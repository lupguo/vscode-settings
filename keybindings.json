// LupingGuo BindKeyings 2026.01.10
// // Place your key bindings in this file to override the defaultsauto[]

[
	// -------------------- Part1: Editor编辑器 --------------------
	// cmd+d 复制当前选择内容
	{
		"key": "cmd+d",
		"command": "editor.action.duplicateSelection",
		"when": "editorTextFocus"
	},
	// Alt+上箭头 执行 Extend Selection
	{
		"key": "alt+up",
		"command": "editor.action.smartSelect.expand"
	},

	// Alt+下箭头 执行 Shrink Selection
	{
		"key": "alt+down",
		"command": "editor.action.smartSelect.shrink"
	},

	// cmd+向上 将当前行上移一行
	{
		"key": "cmd+up",
		"command": "editor.action.moveLinesUpAction"
	},

	// cmd+向下 将当前行下移一行
	{
		"key": "cmd+down",
		"command": "editor.action.moveLinesDownAction"
	},

	// cmd+R 搜索并替换
	{
		"key": "cmd+r",
		"command": "editor.action.startFindReplaceAction"
	},

	// Shift+F2 重命名
	{
		"key": "shift+f2",
		"command": "renameFile"
	},

	// cmd+Shift+F 对当前文件执行格式化
	{
		"key": "cmd+shift+f",
		"command": "editor.action.formatDocument"
	},

	// Ctrl+Shift+F 在指定的文件夹搜索内容
	{
		"key": "ctrl+shift+f",
		"command": "workbench.action.findInFiles"
	},

	// Ctrl+Shift+R 在指定的文件夹搜索内容
	{
		"key": "ctrl+shift+r",
		"command": "workbench.action.replaceInFiles"
	},

	// Ctrl+K 删除右侧文本
	{
		"key": "ctrl+k",
		"command": "deleteAllRight"
	},

	// cmd+Del 删除整行
	{
		"key": "cmd+backspace",
		"command": "editor.action.deleteLines"
	},
	// Ctrl+A 移动到行首
	{
		"key": "ctrl+a",
		"command": "cursorLineStart"
	},
	// Ctrl+E 移动到行尾
	{
		"key": "ctrl+e",
		"command": "cursorLineEnd"
	},
	// Ctrl+B 光标后移一格（无论是在Visual模式，还是在Insert模式下）
	{
		"key": "ctrl+b",
		"command": "cursorLeft"
	},
	// Ctrl+F 光标前移一格（无论是在Visual模式，还是在Insert模式下）
	{
		"key": "ctrl+f",
		"command": "cursorRight"
	},
	// 历史位置回溯：后退
	{
		"key": "cmd+[",
		"command": "workbench.action.navigateBack"
	},
	// 历史位置回溯：前进 (建议配套设置)
	{
		"key": "cmd+]",
		"command": "workbench.action.navigateForward"
	},

	// -------------------- Part2: 工作台 --------------------
	// Shift+Cmd+A 快捷控制操作
	{
		"key": "shift+cmd+a",
		"command": "workbench.action.showCommands"
	},
	// 快速打开检索文件列表
	{
		"key": "cmd+e",
		"command": "workbench.action.quickOpen"
	},
	// ctrl+` 面板打开&隐藏
	{
		"key": "ctrl+`",
		"command": "workbench.action.togglePanel"
	},
	// ctrl+` 左侧Sidebar面板打开&隐藏
	{
		"key": "cmd+1",
		"command": "workbench.action.toggleSidebarVisibility"
	},
	// cmd+n 左侧Sidebar面板区域新建文件
	{
		"key": "cmd+n",
		"command": "explorer.newFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	// cmd+del 删除文件
	{
		"key": "cmd+backspace",
		"command": "deleteFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	// 文件 diff，和Jetbrains对齐
	{
		"key": "cmd+d",
		"command": "git.openChange",
		"when": "filesExplorerFocus && !inputFocus"
	},
	// Markdown预览
	{
		"key": "cmd+p",
		"command": "markdown-preview-enhanced.openPreviewToTheSide",
		"when": "editorLangId == 'markdown'"
	},

	// -------------------- Part3: Terminal区域控制 --------------------
	// cmd+d 分栏
	{
		"key": "cmd+d",
		"command": "workbench.action.terminal.split",
		"when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
	},
	// cmd+w 关闭
	{
		"key": "cmd+w",
		"command": "workbench.action.terminal.kill",
		"when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
	},
	// cmd+n 新创建一个Terminal
	{
		"key": "cmd+n",
		"command": "workbench.action.terminal.new",
		"when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
	},
	// cmd+r 清理屏幕
	{
		"key": "cmd+r",
		"command": "workbench.action.terminal.clear",
		"when": "terminalFocus && terminalHasBeenCreated && !accessibilityModeEnabled || terminalFocus && terminalProcessSupported && !accessibilityModeEnabled || accessibilityModeEnabled && accessibleViewIsShown && terminalHasBeenCreated && accessibleViewCurrentProviderId == 'terminal' || accessibilityModeEnabled && accessibleViewIsShown && terminalProcessSupported && accessibleViewCurrentProviderId == 'terminal'"
	},

	// -------------------- Part4: Markdown 配置 -------------

	// cmd+1 到 Cmd+5 输入 # 到 #####
	// Alt+Cmd+1 输入 #
	{
		"key": "alt+cmd+1",
		"command": "runCommands",
		"args": {
			"commands": ["cursorLineStart", { "command": "type", "args": { "text": "# " } }]
		},
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// Alt+Cmd+2 输入 ##
	{
		"key": "alt+cmd+2",
		"command": "runCommands",
		"args": {
			"commands": ["cursorLineStart", { "command": "type", "args": { "text": "## " } }]
		},
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// Alt+Cmd+3 输入 ###
	{
		"key": "alt+cmd+3",
		"command": "runCommands",
		"args": {
			"commands": ["cursorLineStart", { "command": "type", "args": { "text": "### " } }]
		},
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// Alt+Cmd+4 输入 ####
	{
		"key": "alt+cmd+4",
		"command": "runCommands",
		"args": {
			"commands": ["cursorLineStart", { "command": "type", "args": { "text": "#### " } }]
		},
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// Alt+Cmd+5 输入 #####
	{
		"key": "alt+cmd+5",
		"command": "runCommands",
		"args": {
			"commands": ["cursorLineStart", { "command": "type", "args": { "text": "##### " } }]
		},
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// Alt+Cmd+0 清除行首的 # 号
	{
		"key": "alt+cmd+0",
		"command": "runCommands",
		"args": {
			"commands": ["cursorLineStart", "deleteWordRight", "deleteRight"]
		},
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+B 加粗
	{
		"key": "cmd+b",
		"command": "markdown.extension.editing.toggleBold",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+E 或 Cmd+K 输入代码（单行 `code`）
	// {
	// 	"key": "cmd+e",
	// 	"command": "markdown.extension.editing.toggleCodeSpan",
	// 	"when": "editorTextFocus && editorLangId == 'markdown'"
	// },
	{
		"key": "cmd+k",
		"command": "markdown.extension.editing.toggleCodeSpan",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+Shift+K 输入代码块（```）
	{
		"key": "cmd+shift+k",
		"command": "markdown.extension.editing.toggleCodeBlock",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+I 斜体
	{
		"key": "cmd+i",
		"command": "markdown.extension.editing.toggleItalic",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+d 复制当前选择内容
	{
		"key": "cmd+d",
		"command": "editor.action.duplicateSelection",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+L 增加链接
	{
		"key": "cmd+l",
		"command": "markdown.extension.insertLink",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+Shift+X 增加删除线
	{
		"key": "cmd+shift+x",
		"command": "markdown.extension.editing.toggleStrikethrough",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+Shift+I 增加无序列表
	{
		"key": "cmd+shift+l",
		"command": "markdown.extension.checkTaskList",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// cmd+Shift+U 增加有序列表
	{
		"key": "cmd+shift+u",
		"command": "markdown.extension.editing.toggleList",
		"when": "editorTextFocus && editorLangId == 'markdown'"
	},

	// Alt+Cmd+U 对Toc内容排序
	{
		"key": "alt+cmd+u",
		"command": "markdown.extension.toc.addSecNumbers"
	},

	// Shift+Alt+Cmd+U 对Toc内容移除排序
	{
		"key": "shift+alt+cmd+u",
		"command": "markdown.extension.toc.removeSecNumbers"
	},

	// -------------------- Part Last: 删除冲突按键 --------------------
	// 删除
	{
		"key": "shift+cmd+i",
		"command": "-workbench.action.chat.openEditSession",
		"when": "chatEditingParticipantRegistered && view != 'workbench.panel.chat.view.edits'"
	},
	{
		"key": "shift+cmd+i",
		"command": "-workbench.panel.chatEditing",
		"when": "workbench.panel.chat.view.edits.active"
	},
	{
		"key": "cmd+p",
		"command": "-workbench.action.quickOpen"
	},
	{
		"key": "shift+cmd+a",
		"command": "-notification.acceptPrimaryAction",
		"when": "notificationFocus || notificationToastsVisible"
	},
	{
		"key": "shift+f2",
		"command": "editor.action.rename",
		"when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
	},
	{
		"key": "f2",
		"command": "-editor.action.rename",
		"when": "editorHasRenameProvider && editorTextFocus && !editorReadonly"
	}
]
